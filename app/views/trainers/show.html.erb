<h3>Trainer</h3>

<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% @pokemons.each do |pokemon| %>
	<% if pokemon.trainer_id == params[:id]%> 
		<% if pokemon.ndex %>
			<%= image_tag("pokemon/#{@pokemon.ndex}.png", alt: "pokemon") %>
		<% end %>
	<% end %> 
<% end %>
